@import 'normalize'
@import 'helper'
@import 'invitation'
@import 'details'
@import 'costume-ideas'
@import 'editor'


/* variables */
$lightgrey = #999
$linkColor = lighten(#53195f, 15%)
$grey = #eee
$black = #333
$white = #f7f7f7

html
button
input
select
textarea
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)

body
  color: $black
  font-size: 1em
  line-height: 1.5
  background-image: url(/images/stardust.png)


.Section
    > * > *
        margin: 0 auto

footer
  color:$black
  padding: 1em

  nav
    display: flex
    flex-direction: row
    justify-content: center
    user-select:none

  .nav-item
    padding: 0.2em
    border-radius: 0.3em
    font-size: 1.2em

    a.active
      text-decoration:underline

    &:after
      padding: 0.2em
      margin-left: 0.5em
      content: '|'

    &:last-child:after
      content: ''

.content
  padding: 1em

@font-face
    font-family: 'monsters';
    src: url('/fonts/monsters.eot');
    src: url('/fonts/monsters.eot?#iefix') format('embedded-opentype'),
         url('/fonts/monsters.woff2') format('woff2'),
         url('/fonts/monsters.woff') format('woff'),
         url('/fonts/monsters.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;

@font-face
    font-family: 'germsmonsters';
    src: url('/fonts/germs-webfont.eot');
    src: url('/fonts/germs-webfont.eot?#iefix') format('embedded-opentype'),
         url('/fonts/germs-webfont.woff2') format('woff2'),
         url('/fonts/germs-webfont.woff') format('woff'),
         url('/fonts/germs-webfont.ttf') format('truetype'),
         url('/fonts/germs-webfont.svg#germsmonsters') format('svg');
    font-weight: normal;
    font-style: normal;


.no-select
    user-select: none
    cursor: normal

.material-depth
    padding: 1em
    width: 110px
    height: 110px
    background-color: cyan
    border-radius: 110px
    display: flex
    align-items: center
    justify-content: center


.border-box-wrapper
    border-radius: 1em
    background: repeating-linear-gradient(
      135deg,
      #ff7a00,
      #ff7a00 25px,
      #53195f 25px,
      #53195f 50px
    )
    padding: .6em

    z-depth(1)

    > *
        background-image: url(/images/paper.png)
        width: 100%
        height: 100%
        border-radius: 1em
        z-depth(1)

    &.thick
        background: repeating-linear-gradient(
          45deg,
          #53195f,
          #53195f 25px,
          #ff7a00 25px,
          #ff7a00 50px
        )
        padding: 3em

        > *
          border: 0.3em solid #eee
          z-depth(4)
          overflow: hidden

    header.ribbon-header
        position: absolute
        top: 18px
        left: -20px

        .text
            font-size: 1.2em
            height: 100%
            display: flex
            align-items: center
            justify-content: center
            font-family: 'Kaushan Script', cursive;
            color: #53195f

        .add-button
            font-size: 90%
            background: white
            border-radius: 23px
            height: 24px
            width: 24px
            display: flex
            align-items: center
            justify-content: center
            margin: 5px
            margin-left: 10px
            cursor: pointer
            &:hover
                z-depth(1)
            span
                color: #ff7a00
                margin-left: -1px
                padding-top: 3px

