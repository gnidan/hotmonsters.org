
@font-face
    font-family: 'germsmonsters';
    src: url('/fonts/germs-webfont.eot');
    src: url('/fonts/germs-webfont.eot?#iefix') format('embedded-opentype'),
         url('/fonts/germs-webfont.woff2') format('woff2'),
         url('/fonts/germs-webfont.woff') format('woff'),
         url('/fonts/germs-webfont.ttf') format('truetype'),
         url('/fonts/germs-webfont.svg#germsmonsters') format('svg');
    font-weight: normal;
    font-style: normal;

.details-wrapper
    border-radius: 1em
    text-align: center
    width: 6in
    height: 4in
    background: repeating-linear-gradient(
      135deg,
      #ff7a00,
      #ff7a00 25px,
      #53195f 25px,
      #53195f 50px
    )
    padding: 0.1in
    z-depth(1)

    .details
        color: #333
        padding: 1em
        width: 100%
        height: 100%
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center

        border-radius: 1em
        background-image: url(/images/paper.png)
        z-depth(1)

        header
            margin-bottom: 1em
            padding: 0

        footer
            margin-top: 1em
            padding: 0

        h1
            font-family: germsmonsters
            font-size: 3.8em
            letter-spacing: 0.2em
            margin: 0em
            line-height: 1em

        h2
            font-family: 'Helvetica Neue'
            font-weight: 100
            font-size: 1.5em
            margin: 0em
            margin-bottom: 1em

        p
            margin: 0em
            font-family: 'Helvetica Neue'
            font-weight: 300
